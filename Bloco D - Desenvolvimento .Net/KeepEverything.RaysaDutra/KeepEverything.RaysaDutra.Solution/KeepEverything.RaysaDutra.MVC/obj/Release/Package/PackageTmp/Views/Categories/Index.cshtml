@model IEnumerable<KeepEverything.RaysaDutra.Presentation.Models.CategoryViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NameCategory)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DescriptionCategory)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NameCategory)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DescriptionCategory)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.IdCategory }) |
            @Html.ActionLink("Details", "Details", new { id=item.IdCategory }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.IdCategory })
        </td>
    </tr>
}

</table>
